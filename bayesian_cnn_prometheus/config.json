{
  "preprocessing": {
    "transform_nifti_to_npy": {
      "ext": "nii.gz"
    },
    "update_healthy_patients_indices": false,
    "normalize_images": {
      "is_activated": true
    },
    "create_data_structure": {
      "train_part": 50,
      "valid_part": 10,
      "test_part": 5
    },
    "create_chunks": {
      "is_activated": true,
      "chunks_number": 50,
      "chunk_size": [
        64,
        64,
        32
      ],
      "stride": [
        32,
        32,
        16
      ]
    }
  },
  "weights_dir": "weights",
  "weights_path": null,
  "prior_std": 1,
  "kernel_size": 3,
  "activation": "relu",
  "padding": "SAME",
  "kl_alpha": 0,
  "kl_start_epoch": 2,
  "kl_alpha_increase_per_epoch": 0.5,
  "epochs": 3,
  "validation_steps": 5,
  "initial_epoch": 0,
  "batch_size": 32,
  "lr_decay_start_epoch": 10,
  "mc_samples": 5
}